<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aventador.protectalarm.HomeFragment"
    android:weightSum="10">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/mac_address_layout"
        android:layout_weight="2"
        android:weightSum="10">

        <Button
            android:text="Fast Connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/factConnectionButton"
            android:layout_weight="1" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scan_progressbar"
            android:layout_weight="9" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/frequency_select_layout"
        android:layout_weight="1"
        android:weightSum="10">

        <TextView
            android:text="Frequency :"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/frequencyTextView"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/frequencyEditText"
            android:layout_weight="7"
            android:text="433000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="10"
        android:id="@+id/layout_search_optimal">

        <Button
            android:text="Search optimal Threshold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/searchOptimalThresholdButton"
            android:layout_weight="5" />

        <TextView
            android:text="Result ..."
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rssiValuetextView"
            android:layout_weight="3"
            android:gravity="fill_vertical|center_horizontal"
            android:textSize="24sp" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/progressBarSearchOptimalThreshoold"
            android:layout_weight="2"
            android:indeterminate="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/start_protection_layout">
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Start protection"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:id="@+id/start_stop_protection_button" />
    </LinearLayout>

</LinearLayout>
